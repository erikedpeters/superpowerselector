var space = document.getElementById("Canvas");
var context = space.getContext("2d");
space.addEventListener("click",clickcheck,false);

context.font = "28pt Arial";
context.fillText("Pick up to Five THREE powers",130,40);
context.beginPath();
      context.moveTo(300, 26);
      context.lineTo(380, 26);
      context.lineWidth = 5;
      context.stroke();

context.beginPath();
      context.rect(148,118,152,35);
      context.fillStyle = 'white';
      context.fill();
      context.lineWidth = 2;
      context.strokeStyle = 'black';
      context.stroke();
context.beginPath();
      context.rect(300,118,152,35);
      context.fillStyle = 'white';
      context.fill();
      context.lineWidth = 2;
      context.strokeStyle = 'black';
      context.stroke();
context.beginPath();
      context.rect(452,118,151,35);
      context.fillStyle = 'white';
      context.fill();
      context.lineWidth = 2;
      context.strokeStyle = 'black';
      context.stroke();


context.font = "12px Arial";
context.fillStyle='green';
context.fillText("Select a slot to fill or hit GO",300,110);
context.fillStyle='black';
var i;
var n=0;
var slot = 0;
var icons = [];
var selected = [];

for(i in pList){

if(i%5==0 && i!=0){n++;}

context.fillText(pList[i].power,32+150*i-750*n,200+32*n);
var icon = new Image();
icons.push(icon);
icons[i].src = pList[i].image;
context.drawImage(icons[i],0+150*i-750*n,180+32*n,29,32);
}


function clickcheck(click){
x_pos=click.layerX-space.offsetLeft;
y_pos=click.layerY-space.offsetTop;

var xorgin = 0, yorgin = 180,  xspace = 150, yspace = 32;
var row,column;

if(slot != 0){
if(x_pos<xorgin+xspace){column=1;}
else if(x_pos<xorgin+2*xspace){column=2;}
else if(x_pos<xorgin+3*xspace){column=3;}
else if(x_pos<xorgin+4*xspace){column=4;}
else if(x_pos<xorgin+5*xspace){column=5;}
else {column = 0;}

if(y_pos<yorgin-yspace){row=0;}
else if(y_pos<yorgin+yspace){row=1;}
else if(y_pos<yorgin+2*yspace){row=2;}
else if(y_pos<yorgin+3*yspace){row=3;}
else if(y_pos<yorgin+4*yspace){row=4;}
else if(y_pos<yorgin+5*yspace){row=5;}
else {row = 0;}
}

else{
if(x_pos>148 && x_pos<300 && y_pos>118 && y_pos<143){slot=1, row=0;}
else if(x_pos>300 && x_pos<452 && y_pos>118 && y_pos<143){slot=2, row=0;}
else if(x_pos>452 && x_pos<604 && y_pos>118 && y_pos<143){slot = 3, row=0;}
else{slot=0;}

}
if(row!=0 && column!=0 && slot!=0){
select((column-1)+5*(row-1));
}
}


function select(type){

if (slot==1){
context.clearRect(150,120,149,32);
context.fillText(pList[type].power,150,140);
context.drawImage(icons[type],267,120,29,32);
selected[slot]=type;
if(selected[1]==selected[2]){selected[2]=null; context.clearRect(301,120,149,32);}
if(selected[1]==selected[3]){selected[3]=null; context.clearRect(453,120,149,32);}
slot=0, row=0, column=0;
}
else if (slot==2){
context.clearRect(301,120,149,32);
context.fillText(pList[type].power,301,140);
context.drawImage(icons[type],419,120,29,32);
selected[slot]=type;
if(selected[2]==selected[1]){selected[1]=null; context.clearRect(150,120,149,32);}
if(selected[2]==selected[3]){selected[3]=null; context.clearRect(453,120,149,32);}
slot=0, row=0, column=0;
}
else if (slot==3){
context.clearRect(453,120,149,32);
context.fillText(pList[type].power,453,140);
context.drawImage(icons[type],569,120,29,32);
selected[slot]=type;
if(selected[3]==selected[1]){selected[1]=null; context.clearRect(150,120,149,32);}
if(selected[3]==selected[2]){selected[2]=null; context.clearRect(301,120,149,32);}
slot=0, row=0, column=0;
}
}

